    <link rel="stylesheet" href="/static/css/normalize.css" />

    <link rel="stylesheet" href="/static/css/index.css" />
    <link rel="stylesheet" href="/static/css/random.css" />
  </head>
  <body>
    <div class="main-container">
      <header class="menu">
        <h1 class="title_small">점메추</h1>
        <div class="icon"><i class="bi bi-list"></i></div>
        <ul class="menu-list d-none">
          <a href="/index.html" class="menu_ls">Home</a>
          <a href="#" class="menu_ls">정산하기</a>
          <a href="#" class="menu_ls">웹 소개</a>
          <a href="#" class="menu_ls">팀원 소개</a>
        </ul>
      </header>
      <div class="main">
        <div>
          <h1 class="title">
            점<span class="small">심</span>메<span class="small">뉴</span
            >추<span class="small">천</span>
          </h1>
        </div>
        <form>
          <input
            id="search"
            type="search"
            name="q"
            placeholder="찾고 싶은 메뉴를 입력해 주세요"
            onfocus="this.placeholder=''"
            onblur="this.placeholder='찾고 싶은 메뉴를 입력해 주세요'"
          />
          <button id="submit" type="submit">
            <img src="/static/image/search.svg" />
          </button>
        </form>
        <div class="random">
          <div class="receipt">
            <div class="title_text">
              <h2>메뉴 랜덤 선택</h2>
            </div>
            <div class="menu_print">
              <h2></h2>
            </div>
            <div class="menu_slot">
              <div class="slot_container">
                <ul class="slide_box">
                  <li>카레</li>
                  <li>우동</li>
                  <li>햄버거</li>
                  <li>냉면</li>
                  <li>마라탕</li>
                  <li>KDT</li>
                  <li>졸려워</li>
                  <li>집</li>
                </ul>
              </div>
            </div>
            <div class="main_text">
              <p>DISTANCE<span class="span">:??m</span></p>
              <p>COST&<em>:?000won</em></p>
              <p>LIKE<span class="span">:♥♥♥♥♥</span></p>
              <br />
              <p>TOTAL<span>100% like it</span></p>
            </div>
            <div class="btn_area">
              <button id="pick" class="r-btn" onclick="lunchIs()">
                Pick menu
              </button>
              <button id="reset" class="r-btn" onclick="reset()">Reset</button>
            </div>
          </div>
        </div>
        <div class="container">
          <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
              <li class="nav-item">
                <a href="/index.html" class="nav-link px-2 text-muted">Home</a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link px-2 text-muted">정산하기</a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link px-2 text-muted">웹 소개</a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link px-2 text-muted">팀원소개</a>
              </li>
            </ul>
            <p class="text text-center text-muted">© 2022 Company, Inc</p>
          </footer>
        </div>
      </div>
    </div>
    <script src="/static/js/random.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>